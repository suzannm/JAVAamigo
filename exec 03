import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);  // Criando o objeto Scanner para entrada de dados

        System.out.print("Informe seu nome: ");
        String nome = scanner.nextLine();  // Lê o nome do usuário

        System.out.print("Informe sua idade: ");
        int idade = scanner.nextInt();  // Lê a idade do usuário

        System.out.println("Olá, " + nome + ", sua idade é " + idade + ".");  // Exibe a mensagem

        scanner.close();  // Fecha o Scanner
    }
}
